{
    "include": ["src/**/*"],
    "compilerOptions": {
        "outDir": "build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "strict": true,
        "noUncheckedIndexedAccess": false,
        "moduleResolution": "node10",
        "module": "CommonJS",
        "lib": ["ES2022"]
    }
}
